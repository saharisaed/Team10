<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/okMessage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".ByCaretaker.complainDialog">

    <TextView
        android:id="@+id/viewTiile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/complainTi"
        android:textColor="#005294"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/complainMessage"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="#090808"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sendcomplain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#0A508F"
        android:gravity="center"
        android:text="@string/sendInD"
        android:textColor="#FBFAFA"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>