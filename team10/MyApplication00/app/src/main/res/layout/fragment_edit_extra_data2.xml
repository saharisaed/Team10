<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ByAdmin.EditExtraData2">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/editUserelde"
        android:textColor="#1258AC"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/nameofِElderly4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:text="t"
        android:textColor="#1258AC"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tt"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/birthdayE"
            android:textColor="#005AB2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/birthdayE"
            android:layout_width="242dp"
            android:layout_height="57dp"
            android:layout_weight="1"
            android:ems="10"
            android:foregroundGravity="left|bottom"
            android:gravity="left|end"
            android:inputType="date"
            android:textColor="#0C0B0B"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/calbirthday"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:src="@drawable/ic_baseline_calendar_today_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t2"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/ageE"
            android:textColor="#005AB2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ageEl"
            android:layout_width="242dp"
            android:layout_height="57dp"
            android:layout_weight="1"
            android:ems="10"
            android:foregroundGravity="left|bottom"
            android:gravity="left|end"
            android:inputType="date"
            android:textColor="#050505"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="@string/assistPhoneE"
            android:textColor="#005AB2"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/E1"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        app:counterEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/assistPhone"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:hint="@string/assistPhoneE"
            android:inputType="number|text" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="@string/addressE"
            android:textColor="#005AB2"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/E11"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        app:counterEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addressE"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:hint="@string/addressE" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/addMediM"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#1258AC"
        android:text="@string/addMedecian"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnForElderly2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#1258AC"
        android:text="@string/save"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</LinearLayout>