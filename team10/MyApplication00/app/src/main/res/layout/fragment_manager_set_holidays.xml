<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#28682A"
    android:orientation="vertical"
    tools:context=".ByManager.ManagerSetHolidays">

    <TextView
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center"
        android:text="@string/setHolidays"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/caretakerNamePay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="@string/setHolidays"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nameofCaretaker4"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center|left"
        android:text="@string/setFour"
        android:textColor="#F3F6FA"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num1"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="1"
            android:textColor="#070707"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date1M"
            android:layout_width="117dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:inputType="date"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/cal1M"
            android:layout_width="31dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#006A20"
            android:src="@drawable/calendarblack" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num3"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="2"
            android:textColor="#060707"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date2M"
            android:layout_width="117dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:inputType="date"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/cal2M"
            android:layout_width="31dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#006A20"
            android:src="@drawable/calendarblack" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num4"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="3"
            android:textColor="#0A0A0B"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date3M"
            android:layout_width="117dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:inputType="date"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/cal3M"
            android:layout_width="31dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#006A20"
            android:src="@drawable/calendarblack" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="4"
            android:textColor="#0C0C0C"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date4M"
            android:layout_width="117dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:inputType="date"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/cal4M"
            android:layout_width="31dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#006A20"
            android:src="@drawable/calendarblack" />
    </LinearLayout>

    <Button
        android:id="@+id/saveForHoli"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#007200"
        android:elevation="10dp"
        android:shadowColor="#FFE9E9"
        android:shadowDx="10"
        android:shadowDy="10"
        android:text="@string/save"
        android:textColor="#F7F0F0"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/cancelForHoli"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#007200"
        android:elevation="10dp"
        android:shadowColor="#FFE9E9"
        android:shadowDx="10"
        android:shadowDy="10"
        android:text="@string/cancel"
        android:textColor="#F7F0F0"
        android:textSize="14sp"
        android:textStyle="bold" />


</LinearLayout>

